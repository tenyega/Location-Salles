{% extends 'back/base.html.twig' %}

{% block title %}GESTION DE TABLE  {% endblock %}

{% block body %}
    <h1 id="h1">GESTION DE TABLE - MATERIEL</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NOM</th>
                           
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
        {% for material in materials %}
            <tr>
                <td>{{ material.id }}</td>
                <td>{{ material.name }}</td>
               
                <td>
                    <a href="{{ path('back_material_editMaterial', {'id' : material.id }) }}">MODIFIER</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">PAS DE DONNEE TROUVE</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="c"><a href="{{ path('back_material_newMaterial')}}">AJOUTER MATERIEL</a></div>
    <div id="c"><a href="{{ path('back_halltable_gestiontable') }}">Retour</a></div>


{% endblock %}
