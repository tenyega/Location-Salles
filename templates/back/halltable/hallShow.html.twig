{% extends 'back/base.html.twig' %}

{% block title %}GESTION DE TABLE  {% endblock %}

{% block body %}
    <h1 id="h1">GESTION DE TABLE - HALL</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>NOM</th>
                <th>EMPLACEMENT</th>
                <th>CAPACITE</th>
                <th>AMENAGEMENT</th>
            
                <th>ACTIONS</th>
            </tr>
        </thead>
        <tbody>
        {% for hall in halls %}
            <tr>
                <td>{{ hall.id }}</td>
                <td>{{ hall.name }}</td>
                <td>{{ hall.location }}</td>
                <td>{{ hall.capacity }}</td>
                 
                <td>
                    
                    {{ hall.arrangement.name }}

                </td>
                <td>
                    <a href="{{ path('back_hall_edit', {'id' : hall.id }) }}">MODIFIER</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">PAS DE DONNEE TROUVE</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div id="c"><a href="{{ path('back_halltable_gestiontable') }}">Retour</a></div>
    <div id="c"><a href="{{ path('back_hall_new') }}">AJOUTER UNE SALLE</a></div>

{% endblock %}
